        subtitle: 'Accurate books with the basics covered',
        price: 300,
        period: 'per month',
        items: [
          {
            description: 'Categorize your transactions for your P&L and Schedule C',
          },
          {
            description: 'Reconcile your accounts',
          },
        ],
        callToAction: {
          // target: '_blank',
          text: 'Get started',
          href: '#contact',
        },
      },
      {
        title: 'growth',
        subtitle: 'Deeper insights and support to guide your business',
        price: 600,
        period: 'Per Month',
        items: [
          {
            description: 'Categorize your transactions for your P&L and Schedule C',
          },
          {
            description: 'Reconcile your accounts',
          },
          {
            description:
              'Manage your Financial Statements: Profit & Loss, Balance Sheet, Accounts Payable, & Accounts Receivable',
          },
          {
            description: 'Monthly business consultation based on your business needs to enable growth and optimization',
          },
        ],
        callToAction: {
          // target: '_blank',
          text: 'Get started',
          href: '#contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'complete',
        subtitle: 'All-inclusive bookkeeping with full A/P & A/R management',
        price: 1200,
        period: 'Per Month',
        items: [
          {
            description: 'Categorize your transactions for your P&L and Schedule C',
          },
          {
            description: 'Reconcile your accounts',
          },
          {
            description:
              'Manage your Financial Statements: Profit & Loss, Balance Sheet, Accounts Payable, & Accounts Receivable',
          },
          {
            description: 'Monthly business consultation based on your business needs to enable growth and optimization',
          },
          {
            description: 'Full-service A/P & A/R management. We will create your bills & invoices and track payments',
          },
        ],
        callToAction: {
          // target: '_blank',
          text: 'Get started',
          href: '#contact',
        },
      },
    ]}
  />

