---
import CheckIcon from '/src/assets/images/checkmark.svg';

export interface Props {
  feature: string;
  large?: boolean;
}

const { feature, large = false } = Astro.props;

const textSize = large ? 'text-lg' : 'text-base';
const iconSize = large ? 'w-5 h-5' : 'w-4 h-4';
---

<li class="flex items-start gap-3">
  <CheckIcon class={`${iconSize} mt-1 text-blue-700 shrink-0`} aria-hidden="true" />
  <p class={`text-gray-800 leading-snug ${textSize}`}>
    {feature}
  </p>
</li>
