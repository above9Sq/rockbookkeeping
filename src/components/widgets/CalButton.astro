---
import PhoneFillIcon from '/src/assets/images/phone-fill.svg';
import { buttonClasses, type ButtonVariant } from '~/styles/buttonStyles';

export interface Props {
  label?: string;
  narrow?: boolean;
  hero?: boolean;
  variant?: ButtonVariant;
  // Legacy: kept for compatibility; prefer `variant`
  solidDark?: boolean;
  class?: string;
}

const {
  label = 'Book a free call',
  narrow = false,
  hero = false,
  variant,
  solidDark = false,
  class: extraClass = '',
} = Astro.props;

const resolvedVariant: ButtonVariant =
  variant ??
  (hero ? 'light' : undefined) ??
  (solidDark ? 'dark' : undefined) ??
  'outline';

const size = hero ? 'hero' : 'md';
const baseClasses = buttonClasses({
  variant: resolvedVariant,
  size,
  fullWidth: hero,
  narrow,
});
---

<button
  type="button"
  data-cal-link="rockbookkeeping/30min"
  data-cal-namespace="30min"
  data-cal-config='{"layout":"month_view","theme":"light"}'
  aria-haspopup="dialog"
  aria-controls="cal-modal"
  class={`${baseClasses} ${extraClass}`}
>
  <PhoneFillIcon class="w-5 h-5 shrink-0" />
  <span>{label}</span>
</button>

<script is:inline>
  (function (C, A, L) {
