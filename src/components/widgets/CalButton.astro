---
import PhoneFillIcon from '/src/assets/images/phone-fill.svg';
import { btnHeroPrimary, btnSolidDarkShell, btnOutlineDarkShell } from '~/styles/buttonStyles';

export interface Props {
  label?: string;
  narrow?: boolean;
  hero?: boolean;
  solidDark?: boolean;
  class?: string;
}

const {
  label = 'Book a free call',
  narrow = false,
  hero = false,
  solidDark = false,
  class: extraClass = '',
} = Astro.props;

// Width + horizontal padding are still controlled per-usage
const paddingX = narrow ? 'px-6 sm:px-8' : 'pl-16 pr-11';
const widthClass = narrow ? 'w-full sm:w-fit' : 'w-full lg:w-fit';

// Compose shared shells with local spacing
const baseSolidDark = `${btnSolidDarkShell} ${paddingX} ${widthClass}`;
const baseOutline = `${btnOutlineDarkShell} ${paddingX} ${widthClass}`;
const baseHero = `${btnHeroPrimary} ${widthClass}`;

const baseClasses =
  hero ? baseHero
  : solidDark ? baseSolidDark
  : baseOutline;
---

<button
  type="button"
  data-cal-link="rockbookkeeping/30min"
  data-cal-namespace="30min"
  data-cal-config='{"layout":"month_view","theme":"light"}'
  aria-haspopup="dialog"
  aria-controls="cal-modal"
  class={`${baseClasses} ${extraClass}`}
>
  <!-- ICON ALWAYS ON LEFT -->
  <PhoneFillIcon class="w-5 h-5 shrink-0" />
  <span>{label}</span>
</button>

<!-- Cal element-click embed code (unchanged) -->
<script is:inline>
  (function (C, A, L) {
    if (C.__calLoaded) return;
    C.__calLoaded = true;

    let p = function (a, ar) {
      a.q.push(ar);
