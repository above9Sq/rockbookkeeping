---
import Image from '~/components/common/Image.astro';
import heroImage from '~/assets/images/accounting-hero-wide.png';
import bookkeeperCertImage from '~/assets/images/cert-bookkeeper.png';
import level1CertImage from '~/assets/images/cert-level1.png';
import FiveStars from '../tailwind/FiveStars.astro';
---

<section data-hero class="max-w-[1600px] mx-auto px-4 xl:px-[120px] pb-3 pt-8 xl:py-14">
  <div
    class="grid grid-cols-1 xl:grid-cols-2 gap-6 xl:gap-8 items-start justify-items-center xl:justify-items-stretch max-w-[85rem] mx-auto"
  >
    <div
      class="flex flex-col gap-4 xl:gap-8 items-center xl:items-start justify-center text-center xl:text-left w-full max-w-[720px] xl:max-w-none"
    >
      <h1
        class="mt-0 block text-[32px] leading-[1.0] sm:text-[38px] sm:leading-[1.2] md:text-[45px] md:leading-[49.5px] tracking-[0.45px] font-black text-gray-800 text-balance text-center xl:text-left"
      >
        Your books are a mess. We'll fix them — fast.
      </h1>
      <p class="text-lg md:text-xl leading-6 md:leading-7 text-gray-800 text-center xl:text-left xl:-mt-1 max-w-[52ch]">
        Stop dreading tax season. We'll clean up your QuickBooks, organize everything, and give you total peace of mind.
      </p>

      <!-- Button -->
      <div class="max-[400px]:w-full flex flex-col gap-1.5">
        <div class="flex w-full justify-center xl:justify-start">
          <button
            type="button"
            class="btn-pop py-2.5 pl-16 pr-11 max-[400px]:px-0 w-full max-w-md max-[400px]:max-w-none max-[400px]:w-full inline-flex justify-center items-center gap-x-2 text-base uppercase font-bold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-hidden focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none"
            data-hs-overlay="#contact-modal"
            data-open-modal
            aria-haspopup="dialog"
            aria-controls="contact-modal"
            aria-expanded="false"
          >
            Get Your Clean Books Plan
            <svg
              class="shrink-0 size-4"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"><path d="m9 18 6-6-6-6"></path></svg
            >
          </button>
        </div>
        <p class="text-sm">
          <span><span class="text-accent">No spam.</span> We’ll call you within one business day.</span>
        </p>
      </div>

      <!-- Certs -->
      <div class="flex w-full items-center justify-center xl:justify-start gap-x-4">
        <Image
          class="scale-80 md:scale-100 w-auto object-contain"
          src={bookkeeperCertImage}
          alt="Certified QuickBooks Bookkeeper certification"
          width={100}
          height={100}
          loading="eager"
        />
        <Image
          class="scale-80 md:scale-100 w-auto object-contain"
          src={level1CertImage}
          alt="QuickBooks ProAdvisor Level 1 certification"
          width={100}
          height={100}
          loading="eager"
        />
        <div class="pl-3 pb-4 md:pl-0">
          <FiveStars />
        </div>
      </div>
      <!-- End Certs -->
    </div>
    <!-- End Col -->

    <div class="w-full flex justify-center xl:justify-start xl:ms-0">
      <Image
        class="mx-auto lg:mx-0 rounded-lg max-w-[800px] w-full sm:max-w-[600px] md:max-w-[700px] aspect-[16/9] object-cover"
        src={heroImage}
        alt="Laptop and documents hero image"
        loading="eager"
        width={665}
        height={374}
      />
    </div>
    <!-- End Col -->
  </div>
  <!-- End Grid -->
</section>
