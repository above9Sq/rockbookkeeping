---
type Block = { kind: 'paragraph'; text: string } | { kind: 'list'; title: string; items: string[] };

export interface Props {
  header: string;
  blocks: Block[];
  bgColor?: string;
}

const { header, blocks, bgColor = '#E3EDFF' } = Astro.props;
---

<div ...>
  <h2 class="text-2xl sm:text-3xl lg:text-[34px] font-semibold text-gray-900">{header}</h2>
  <div class="mt-4 space-y-4 text-left">
    {
      blocks.map((block) =>
        block.kind === 'paragraph' ?
          <p class="text-base sm:text-lg text-gray-700">{block.text}</p>
        : <div class="space-y-2">
            <h3 class="font-semibold text-lg text-gray-900">{block.title}</h3>
            <ul class="list-disc pl-5 space-y-2 text-gray-700">
              {block.items.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
      )
    }
  </div>
</div>
