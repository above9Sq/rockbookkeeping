---
import CtaButton from '~/components/widgets/CtaButton.astro';

export interface Props {
  header: string;
  subheader?: string;
  bgColor?: string;
}

const { header, subheader, bgColor = '#e3edff' } = Astro.props;
---

<div
  class="flex flex-col lg:flex-row items-center justify-between gap-6 rounded-lg p-6 sm:p-8 lg:p-10 border border-gray-900 text-center lg:text-left hover:shadow-[0_6px_20px_rgba(0,0,0,0.08)] transition-shadow duration-200"
  style={`background-color: ${bgColor}`}
>
  <div class="flex-1 mb-2 lg:mb-0">
    <h3 class="text-2xl lg:text-3xl font-black text-gray-900 mb-2">{header}</h3>
    {subheader ? <p class="max-w-lg text-gray-700">{subheader}</p> : null}
  </div>
  <div class="w-full sm:w-auto self-stretch lg:self-center">
    <CtaButton class="w-full sm:w-auto" />
  </div>
</div>
