---
import CtaButton from '~/components/widgets/CtaButton.astro';

export interface Props {
  header: string;
  bgColor?: string;
}

const { header, bgColor = '#e3edff' } = Astro.props;
---

<div
  class="flex flex-col lg:flex-row rounded-2xl p-8 lg:p-10 border border-gray-800 text-center"
  style={`background-color: ${bgColor}`}
>
  <div class="flex-1 mb-6 lg:mb-0 text-center lg:text-left">
    <h3 class="text-2xl lg:text-3xl font-black text-gray-900 mb-2">{header}</h3>
  </div>
  <div>
    <CtaButton />
  </div>
</div>
