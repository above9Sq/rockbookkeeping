---
export interface Props {
  maxWidth?: string; // optional 
  
  /** Opt-out of wide padding on lg+ */
  narrow?: boolean;
}

const { maxWidth, narrow = false } = Astro.props;

const paddingClasses =
  narrow ?
    'px-6 md:px-24 xl:px-[120px]' // skip lg:[200px]
  : 'px-6 md:px-24 lg:px-[200px] xl:px-[120px]';
---

<div class={`${paddingClasses} mx-auto ${maxWidth ?? ''}`}>
  <slot />
</div>
