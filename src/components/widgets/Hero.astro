---
import Image from '~/components/common/Image.astro';

import heroHeadshot from '~/assets/images/hero-headshot-square.png';
import JoshSignature from '/src/assets/images/josh-signature.svg';
import CalButton from './CalButton.astro';
import CtaButton from './CtaButton.astro';

const headline = "Messy books? We'll fix that.";

const subheadline =
  'Get financial clarity with fully managed QuickBooks. We will organize every transaction, reconcile every account, and give your monthly financial statements.';
---

<section data-hero class="bg-[#324A78] text-white">
<div class="max-w-[1600px] mx-auto px-6 xl:px-[120px] pt-10 pb-24 sm:pt-12 sm:pb-20 lg:pt-24 lg:pb-32">
    <!-- Stacks by default, 2-col at xl+ -->
    <div class="grid grid-cols-1 xl:grid-cols-2 items-center gap-2 sm:gap-12 xl:gap-[108px]">
      <!-- Left column: text + CTAs -->
      <div
        class="flex flex-col gap-7 xl:gap-8 max-w-[620px] mx-auto xl:mx-0 items-center xl:items-start text-center xl:text-left"
      >
        <h1
          class="mt-0 uppercase text-[32px] leading-[1.0] sm:text-[38px] sm:leading-[1.1] md:text-[45px] md:leading-[1.1] tracking-[0.45px] font-black text-balance"
        >
          {headline}
        </h1>

        <p class="text-base sm:text-lg leading-relaxed text-[#E4ECFF]">
          {subheadline}
        </p>

        <!-- CTAs: full width on mobile, content width at sm+ -->
        <div class="flex flex-col gap-3 w-full sm:max-w-[320px] mx-auto xl:mx-0">
          <CalButton narrow hero label="Book a call with Josh" />
          <CtaButton narrow hero label="Send Josh a quick note" />
        </div>
      </div>

      <!-- Right column: headshot + signature -->
      <div class="flex justify-center xl:justify-start mt-12 xl:mt-0">
        <!-- Force full width on mobile, clamp to 385px at md+ -->
        <div class="relative w-[385px] mx-auto xl:mx-0">
          <Image
            src={heroHeadshot}
            alt="Josh Cesana, Rock Bookkeeping"
            width={385}
            height={341}
            loading="eager"
            decoding="async"
            class="w-full rounded-[24px] object-cover"
          />

          <!-- Center the signature under the image so it doesn't look left-anchored on mobile -->
          <JoshSignature
            class="absolute -bottom-14 sm:-bottom-16 lg:-bottom-20 left-1/2 -translate-x-1/2 w-[170px] sm:w-[210px] lg:w-[248px] h-auto"
          />
        </div>
      </div>
    </div>
  </div>
</section>
