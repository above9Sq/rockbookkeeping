---
import { SITE } from 'astrowind:config';
import { CONTACT_EMAIL, CONTACT_PHONE_E164 } from '~/config/contact';

const data = {
  "@context": "https://schema.org",
  "@type": "AccountingService",
  "name": "Rock Bookkeeping",
  "url": SITE.site,
  "logo": "https://rockbookkeeping.com/icons/icon-512.png",
  "description": "QuickBooks Online bookkeeping for small businesses â€” reconciliations and monthly financials.",
  "email": CONTACT_EMAIL,
  "telephone": CONTACT_PHONE_E164,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Pittsburgh",
    "addressRegion": "PA",
    "addressCountry": "US"
  },
  "areaServed": { "@type": "Country", "name": "United States" }
  // If/when you have profiles, add:
  // "sameAs": ["https://www.linkedin.com/in/yourprofile", "https://x.com/yourprofile"]
};

// Stringify the data in the frontmatter
const jsonLd = JSON.stringify(data, null, 2);
---

<Fragment set:html={`<script type="application/ld+json">${jsonLd}</script>`} />
